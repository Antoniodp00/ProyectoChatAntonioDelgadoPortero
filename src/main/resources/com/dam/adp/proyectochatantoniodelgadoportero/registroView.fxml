<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@style.css" prefHeight="640.0" prefWidth="520.0" styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dam.adp.proyectochatantoniodelgadoportero.controller.RegistroController">

    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="15.0" styleClass="container" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <children>
                <Label styleClass="form-title" text="Registro de Usuario" />
                <TextField fx:id="txtNombreUsuario" promptText="Nombre de usuario" styleClass="text-field" />
                <PasswordField fx:id="txtContrasena" promptText="Contraseña" styleClass="text-field" />
                <TextField fx:id="txtNombre" promptText="Nombre" styleClass="text-field" />
                <TextField fx:id="txtApellido" promptText="Apellido" styleClass="text-field" />
                <TextField fx:id="txtEmail" promptText="Correo electrónico" styleClass="text-field" />
                <Button fx:id="btnRegistrar" onAction="#registrarUsuario" styleClass="primary-button" text="Registrar" />
                <Label fx:id="lblMensaje" styleClass="error-label" />
                <Hyperlink onAction="#volverLanding" styleClass="form-link" text="Volver a la pantalla de inicio" />
            </children>
        </VBox>
    </children>
</AnchorPane>
