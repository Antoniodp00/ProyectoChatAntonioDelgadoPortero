<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="450.0" styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dam.adp.proyectochatantoniodelgadoportero.controller.InicioSesionController">
    <stylesheets>
        <String fx:value="@style.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="20.0" styleClass="container" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <children>
                <Label styleClass="form-title" text="Inicio de Sesión" />
                <TextField fx:id="txtNombreUsuario" promptText="Nombre de usuario" styleClass="text-field" />
                <PasswordField fx:id="txtContrasena" promptText="Contraseña" styleClass="text-field" />
                <Button fx:id="btnLogin" onAction="#iniciarSesion" styleClass="primary-button" text="Iniciar Sesión" />
                <Label fx:id="lblMensaje" styleClass="error-label" />
                <Hyperlink onAction="#volverLanding" styleClass="form-link" text="Volver a la pantalla de inicio" />
            </children>
        </VBox>
    </children>
</AnchorPane>
